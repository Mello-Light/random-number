import random

def задать_вопрос():
    число1 = random.randint(1, 10)
    число2 = random.randint(1, 10)
    операторы = ['+', '-', '*']
    оператор = random.choice(операторы)
    выражение = str(число1) + оператор + str(число2)
    результат = eval(выражение)
    return выражение, результат

def проверить_ответ(выражение, ответ):
    правильный_ответ = eval(выражение)
    return ответ == правильный_ответ

def main():
    print("Привет! Давай решим простую математическую задачу.")
    выражение, результат = задать_вопрос()
    print("Чему равно выражение:", выражение)
    ответ = int(input("Введите ваш ответ: "))
    if проверить_ответ(выражение, ответ):
        print("Верно! Поздравляю!")
    else:
        print("Неправильно. Правильный ответ:", результат)

if __name__ == "__main__":
    main()
