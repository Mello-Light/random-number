import random

def загадать_число():
    return random.randint(1, 100)

def проверить_угадал(угаданное_число, ответ):
    return угаданное_число == ответ

def main():
    print("Привет! Я загадал число от 1 до 100. Попробуй угадать его!")
    угаданное_число = загадать_число()
    угадал = False
    попытки = 0

    while not угадал:
        попытки += 1
        ответ = int(input("Попытка № {}: ".format(попытки)))
        if проверить_угадал(угаданное_число, ответ):
            print("Поздравляю! Ты угадал число {} с {} попытки!".format(угаданное_число, попытки))
            угадал = True
        else:
            if ответ < угаданное_число:
                print("Нет, загаданное число больше.")
            else:
                print("Нет, загаданное число меньше.")

if __name__ == "__main__":
    main()
